
@{
    ViewBag.Title = "AllOrders";
}

<h2>Istoric comenzi</h2>
<ul>
    <li class="row" style="list-style-type: none">
        <h3 class="pull-left" style="width:200px">Id Comanda</h3><h3 class="pull-left" style="width:300px">Data</h3><h3 class="pull-left" style="width:300px">Detalii livrare</h3>
    </li>
    <hr />
    @foreach (neMag.Models.Order order in ViewBag.Orders)
    {
        if (order.Status == ViewBag.SENT)
        {
            <li class="row" style="list-style-type: none">
                <h3 class="pull-left" style="width:200px">@order.OrderId</h3><h3 class="pull-left" style="width:300px">@order.Date</h3><h3 class="pull-left" style="width:300px">@order.Details</h3><h3 class="pull-right"><a class="btn btn-success" href="/Cos/Show/@order.OrderId">Deschide</a><a class="btn btn-success" href="/Cos/Finish/@order.OrderId">Finalizează</a></h3>
            </li>
        }
        if (order.Status == ViewBag.DONE)
        {
            <li class="row" style="list-style-type: none">
                <h3 class="pull-left" style="width:200px">@order.OrderId</h3><h3 class="pull-left" style="width:300px">@order.Date</h3><h3 class="pull-left" style="width:300px">@order.Details</h3><h3 class="pull-right"><a class="btn btn-success" href="/Cos/Show/@order.OrderId">Afișează</a></h3>
            </li>
        }

    }
