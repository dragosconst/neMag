<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>neMag</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="~/Content/Slick/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/Slick/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="~/Content/noUiSlider/jquery.nouislider.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/Content/Product.css" />
</head>
<body>
    <br />
    <h1>@ViewBag.Message</h1>
    <hr />

    <div class="categories">
        Mergi direct la categoria:
        @foreach (neMag.Models.Category cat in ViewBag.categories)
        {
            <div class="cat-panel">
                <form method="post" id="categ_form" class="card card-sm" action="/Products/Index?id=@ViewBag.inorder&page=1&search=@ViewBag.search">
                    <button class="primary-btn" id="categ_id" name="category" value="@cat.CategoryId" type="submit">@cat.Title</button>
                </form>
            </div>
        }
    </div>

    @if (ViewBag.search != "")
    {
        <h3>Ați căutat produse care conțin <b>@ViewBag.search</b></h3>
    }
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">

                <!-- section title -->
                <div class="col-md-12">
                    <div class="section-title">
                        <h3 class="title">Produse</h3>
                        <div class="section-nav">
                            <ul class="section-tab-nav tab-nav">

                                <li>
                                    @if (ViewBag.inorder == 1)
                                    {
                                        <a class=" btn this-order" href="/Products/Index?id=1&search=@ViewBag.search&category=@ViewBag.cat">Pret crescator</a>
                                    }
                                    else
                                    {
                                        <a class=" btn order" href="/Products/Index?id=1&search=@ViewBag.search&category=@ViewBag.cat">Pret crescator</a>
                                    }
                                </li>
                                <li>
                                    @if (ViewBag.inorder == 2)
                                    {
                                        <a class=" btn this-order" href="/Products/Index?id=2&search=@ViewBag.search&category=@ViewBag.cat">Pret descrescator</a>
                                    }
                                    else
                                    {
                                        <a class=" btn order" href="/Products/Index?id=2&search=@ViewBag.search&category=@ViewBag.cat">Pret descrescator</a>
                                    }
                                </li>
                                <li>
                                    @if (ViewBag.inorder == 3)
                                    {
                                        <a class=" btn this-order" href="/Products/Index?id=3&search=@ViewBag.search&category=@ViewBag.cat">Rating crescator</a>
                                    }
                                    else
                                    {
                                        <a class=" btn order" href="/Products/Index?id=3&search=@ViewBag.search&category=@ViewBag.cat">Rating crescator</a>
                                    }
                                </li>
                                <li>
                                    @if (ViewBag.inorder == 4)
                                    {
                                        <a class=" btn this-order" href="/Products/Index?id=4&search=@ViewBag.search&category=@ViewBag.cat">Rating descrescator</a>
                                    }

                                    else
                                    {
                                        <a class=" btn order" href="/Products/Index?id=4&search=@ViewBag.search&category=@ViewBag.cat">Rating descrescator</a>
                                    }
                                </li>
                                <li>
                                    @if (ViewBag.removeFilter == true)
                                    {
                                        <a class="btn order" href="/Products/Index?id=0&search=@ViewBag.search&category=@ViewBag.cat"><i class="glyphicon glyphicon-remove"></i></a>
                                    }
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /section title -->
                <!-- Products tab & slick -->
                <div class="col-md-12">
                    <div class="row">
                        <div class="products-tabs">
                            <!-- tab -->
                            <div id="tab1" class="tab-pane active">
                                <div class="products-slick" data-nav="#slick-nav-1">
                                    <!-- product -->
                                    @foreach (neMag.Models.Product product in ViewBag.products)
                                    {
                                        <div class="product">
                                            <div class="product-img">
                                                @if (product.Photos.Count() > 0)
                                                {
                                                    <img src="@product.Photos[0].Path" alt="@product.ProductName">
                                                }
                                                else
                                                {
                                                    <img src="https://i.imgur.com/S3AdcES.png" alt="defaultImage">
                                                }
                                            </div>
                                            <div class="product-body">
                                                <p class="product-category">@product.Category.Title</p>
                                                <h3 class="product-name"><a href="/Products/Show/@product.ProductId">@product.ProductName</a></h3>
                                                <h4 class="product-price">
                                                    @if (product.Discount > 0)
                                                    {
                                                        @(@product.Price - @product.Price * @product.Discount / 100)<del class="product-old-price">@product.Price</del>
                                                    }
                                                    else
                                                    {
                                                        @product.Price
                                                    }
                                                    Lei
                                                </h4>
                                                <div class="product-rating">
                                                    @for (var i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= (int)product.Rating)
                                                        {
                                                            <i class="fa fa-star"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="fa fa-star-o empty"></i>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                            <div class="add-to-cart">
                                                <form method="post" action="/Cos/AddToOrder/@product.ProductId" style="display: inline;">
                                                    @Html.HttpMethodOverride(HttpVerbs.Put)
                                                    <button class="add-to-cart-btn" type="submit"><i class="fa fa-shopping-cart"></i> Adauga in cos</button>
                                                </form>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div id="slick-nav-1" class="products-slick-nav"></div>
                            </div>
                            <!-- /tab -->
                        </div>
                    </div>
                </div>
                <!-- Products tab & slick -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->



    <br />
    <div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.lastPage; i++)
                {
                    if (ViewBag.search != "")
                    {
                        <li><a href="/Products/Index?page=@i&category=@ViewBag.cat" class="glyphicon">@(i)</a></li>
                    }
                    else
                    {
                        <li><a href="/Products/Index?page=@i&category=@ViewBag.cat" class="glyphicon">@(i)</a></li>
                    }
                }
                <li>
                    @if (ViewBag.search != "")
                    {
                        <a href="/Products/Index?page=@(ViewBag.lastPage)&category=@ViewBag.cat" class="glyphicon glyphicon-chevron-right" aria-label="Next">
                        </a>
                    }
                    else
                    {
                        <a href="/Products/Index?page=@(ViewBag.lastPage)&category=@ViewBag.cat" class="glyphicon glyphicon-chevron-right" aria-label="Next">
                        </a>
                    }
                </li>
            </ul>
        </nav>
    </div>
    <hr />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Slick/slick.min.js"></script>
    <script src="~/Scripts/nouislider.min.js"></script>
    <script src="~/Scripts/jquery.zoom.min.js"></script>
    <script src="~/Scripts/main.js"></script>

    <script>
        $("#categ_form").submit(function () {
            $(this).attr('action', $(this).attr('action') + '&' + $('#categ_id').val());
            return true;
        });
    </script>
</body>
</html>