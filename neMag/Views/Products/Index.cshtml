<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>neMag</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="~/Content/Slick/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/Slick/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="~/Content/noUiSlider/jquery.nouislider.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/Content/Product.css" />
</head>
<body>
    <br />
    @if (true)
    {
        <p>
            Filtreaza dupa:
            @if (ViewBag.inorder == 1)
            {
                <a class=" btn this-order" href="/Products/Index?id=1&page=1&search=@ViewBag.SearchStr&category=@ViewBag.cat">Pret crescator</a>
            }
            else
            {
                <a class=" btn order" href="/Products/Index?id=1&page=1&search=@ViewBag.SearchStr&category=@ViewBag.cat">Pret crescator</a>
            }
            @if (ViewBag.inorder == 2)
            {
                <a class=" btn this-order" href="/Products/Index?id=2&page=1&search=@ViewBag.SearchStr&category=@ViewBag.cat">Pret descrescator</a>
            }
            else
            {
                <a class=" btn order" href="/Products/Index?id=2&page=1&search=@ViewBag.SearchStr&category=@ViewBag.cat">Pret descrescator</a>
            }
            @if (ViewBag.inorder == 3)
            {
                <a class=" btn this-order" href="/Products/Index?id=3&page=1&search=@ViewBag.SearchStr&category=@ViewBag.cat">Rating crescator</a>
            }
            else
            {
                <a class=" btn order" href="/Products/Index?id=3&page=1&search=@ViewBag.SearchStr&category=@ViewBag.cat">Rating crescator</a>
            }
            @if (ViewBag.inorder == 4)
            {
                <a class=" btn this-order" href="/Products/Index?id=4&page=1&search=@ViewBag.SearchStr&category=@ViewBag.cat">Rating descrescator</a>
            }
            else
            {
                <a class=" btn order" href="/Products/Index?id=4&page=1&search=@ViewBag.SearchStr&category=@ViewBag.cat">Rating descrescator</a>
            }
            @if (ViewBag.x == true)
            {
                <a class="btn order" href="/Products/Index?id=0&page=1&search=@ViewBag.SearchStr&category=@ViewBag.cat"><i class="glyphicon glyphicon-remove"></i></a>
            }
        </p>
    }
    <h1>@ViewBag.Message</h1>
    <hr />

    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">

                <!-- section title -->
                <div class="col-md-12">
                    <div class="section-title">
                        <h3 class="title">Produse</h3>
                        <div class="section-nav">
                            <ul class="section-tab-nav tab-nav">
                                <li class="active"><a data-toggle="tab" href="#tab1">Laptops</a></li>
                                <li><a data-toggle="tab" href="#tab1">Smartphones</a></li>
                                <li><a data-toggle="tab" href="#tab1">Cameras</a></li>
                                <li><a data-toggle="tab" href="#tab1">Accessories</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /section title -->
                <!-- Products tab & slick -->
                <div class="col-md-12">
                    <div class="row">
                        <div class="products-tabs">
                            <!-- tab -->
                            <div id="tab1" class="tab-pane active">
                                <div class="products-slick" data-nav="#slick-nav-1">
                                    <!-- product -->
                                    @foreach (neMag.Models.Product product in ViewBag.products)
                                    {
                                        <div class="product">
                                            <div class="product-img">
                                                @if (product.Photos != null)
                                                {
                                                    <img src="@product.Photos[0].Path" alt="@product.ProductName">
                                                    <!-- discount-->
                                                    <div class="product-label">
                                                        <span class="sale">-30%</span>
                                                        <span class="new">NEW</span>
                                                    </div>
                                                    <!-- /discount-->
                                                }
                                            </div>
                                            <div class="product-body">
                                                <p class="product-category">@product.Category.Title</p>
                                                <h3 class="product-name"><a href="/Products/Show/@product.ProductId">@product.ProductName</a></h3>
                                                <h4 class="product-price">@product.Price</h4>
                                                <div class="product-rating">
                                                    @for (var i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= (int) product.Rating)
                                                        {
                                                            <i class="fa fa-star"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="fa fa-star-o empty"></i>
                                                        }
                                                    }
                                                </div>
                                                <!--
                                                <div class="product-btns">
                                                    <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                                                    <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">add to compare</span></button>
                                                    <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>
                                                </div>
                                                -->
                                            </div>
                                            <div class="add-to-cart">
                                                <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div id="slick-nav-1" class="products-slick-nav"></div>
                            </div>
                            <!-- /tab -->
                        </div>
                    </div>
                </div>
                <!-- Products tab & slick -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->




    <br />
    <div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.lastPage; i++)
                {
                    if (ViewBag.search != "")
                    {
                        <li><a href="/Products/Index?page=@i" class="glyphicon">@(i)</a></li>
                    }
                    else
                    {
                        <li><a href="/Products/Index?page=@i" class="glyphicon">@(i)</a></li>
                    }
                }
                <li>
                    @if (ViewBag.search != "")
                    {
                        <a href="/Products/Index?page=@(ViewBag.lastPage)" class="glyphicon glyphicon-chevron-right" aria-label="Next">
                        </a>
                    }
                    else
                    {
                        <a href="/Products/Index?page=@(ViewBag.lastPage)" class="glyphicon glyphicon-chevron-right" aria-label="Next">
                        </a>
                    }
                </li>
            </ul>
        </nav>
    </div>
    <hr />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Slick/slick.min.js"></script>
    <script src="~/Scripts/nouislider.min.js"></script>
    <script src="~/Scripts/jquery.zoom.min.js"></script>
    <script src="~/Scripts/main.js"></script>
</body>
</html>