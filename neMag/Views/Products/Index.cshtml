<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/Site.css")"
          rel="stylesheet" type="text/css" />
    <script>
    $("#categ_form").submit(function () {
        $(this).attr('action', $(this).attr('action') + '&' + $('#categ_id').val());
        return true;
    });
    </script>
</head>
<body>
    <br />
    <p>
        Filtrează după:
        @if (ViewBag.inorder == 1)
        {
            <a class=" btn this-order" href="/Products/Index?id=1&search=@ViewBag.search&category=@ViewBag.cat">Pret crescator</a>
        }
        else
        {
            <a class=" btn order" href="/Products/Index?id=1&search=@ViewBag.search&category=@ViewBag.cat">Pret crescator</a>
        }
        @if (ViewBag.inorder == 2)
        {
            <a class=" btn this-order" href="/Products/Index?id=2&search=@ViewBag.search&category=@ViewBag.cat">Pret descrescator</a>
        }
        else
        {
            <a class=" btn order" href="/Products/Index?id=2&search=@ViewBag.search&category=@ViewBag.cat">Pret descrescator</a>
        }
        @if (ViewBag.inorder == 3)
        {
            <a class=" btn this-order" href="/Products/Index?id=3&search=@ViewBag.search&category=@ViewBag.cat">Rating crescator</a>
        }
        else
        {
            <a class=" btn order" href="/Products/Index?id=3&search=@ViewBag.search&category=@ViewBag.cat">Rating crescator</a>
        }
        @if (ViewBag.inorder == 4)
        {
            <a class=" btn this-order" href="/Products/Index?id=4&search=@ViewBag.search&category=@ViewBag.cat">Rating descrescator</a>
        }
        else
        {
            <a class=" btn order" href="/Products/Index?id=4&search=@ViewBag.search&category=@ViewBag.cat">Rating descrescator</a>
        }
        @if (ViewBag.removeFilter == true)
        {
            <a class="btn order" href="/Products/Index?id=0&search=@ViewBag.search&category=@ViewBag.cat"><i class="glyphicon glyphicon-remove"></i></a>
        }
    </p>
    <h1>@ViewBag.Message</h1>
    <hr />

    <div class="categories">
        Mergi direct la categoria:
        @foreach (neMag.Models.Category cat in ViewBag.categories)
        {
            <div class="panel panel-default cat-panel">
                <form method="post" id="categ_form" class="card card-sm" action="/Products/Index?id=@ViewBag.inorder&page=1&search=@ViewBag.search">
                    <button class="fake_link" id="categ_id" name="category" value="@cat.CategoryId" type="submit">@cat.Title</button>
                </form>
            </div>
        }
    </div>

    @if(ViewBag.search != "")
    {
        <h3>Ați căutat produse care conțin <b>@ViewBag.search</b></h3>
    }
    <div>
        @foreach (neMag.Models.Product product in ViewBag.Products)
        {
            <div class="panel panel-default my-panel product_box">


                @Html.Partial("productInfo", product)

                <div class="panel-footer my-panel-footer">
                    <a class="btn  pull-left open" href="/Products/Show/@product.ProductId">Afișează</a>
                    <form method="post" action="/Cos/AddToOrder/@product.ProductId">
                        @Html.HttpMethodOverride(HttpVerbs.Put)
                        <button class="btn pull-right open" type="submit">Adaugă în cos</button>
                    </form>
                    <div class="clearfix"></div>
                </div>

            </div>
        }

    </div>
    <br />
    <div>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= ViewBag.lastPage; i++)
                {
                    if (ViewBag.search != "")
                    {
                        <li><a href="/Products/Index?page=@i&category=@ViewBag.cat" class="glyphicon">@(i)</a></li>
                    }
                    else
                    {
                        <li><a href="/Products/Index?page=@i&category=@ViewBag.cat" class="glyphicon">@(i)</a></li>
                    }
                }
                <li>
                    @if (ViewBag.search != "")
                    {
                        <a href="/Products/Index?page=@(ViewBag.lastPage)&category=@ViewBag.cat" class="glyphicon glyphicon-chevron-right" aria-label="Next">
                        </a>
                    }
                    else
                    {
                        <a href="/Products/Index?page=@(ViewBag.lastPage)&category=@ViewBag.cat" class="glyphicon glyphicon-chevron-right" aria-label="Next">
                        </a>
                    }
                </li>
            </ul>
        </nav>
    </div>
    <hr />
</body>
</html>