<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>neMag</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="~/Content/Slick/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/Slick/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="~/Content/noUiSlider/jquery.nouislider.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/Content/User.css" />
</head>
<body>
    @{
        ViewBag.Title = "Lista utilizatori";
    }


    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div id="product-tab" style="margin-top:0">
                        <div class="subsection">
                            <div class="subsection-title">
                                <p style="font-size:25px"> Lista utilizatori <p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="products-tabs">
                                @{
                                    <div id="tab1" class="tab-pane fade in active">
                                        @foreach (var user in ViewBag.UsersList)
                                        {
                                            <div class="product" style="width:255px; height:auto; display: inline-block; margin-left: 15px">
                                                <div class="product-img">
                                                    <img src="https://imgur.com/Zq14XxE.png" alt="defaultImage" style="width: 255px">
                                                </div>

                                                <div class="product-body">
                                                    <h3 class="product-name"><a href="/Users/Show/@user.Id">@user.FirstName <br/> @user.LastName</a></h3>                                                        
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Slick/slick.min.js"></script>
    <script src="~/Scripts/nouislider.min.js"></script>
    <script src="~/Scripts/jquery.zoom.min.js"></script>
    <script src="~/Scripts/main.js"></script>

    <script>
        $("#categ_form").submit(function () {
            $(this).attr('action', $(this).attr('action') + '&' + $('#categ_id').val());
            return true;
        });
    </script>
</body>
</html>