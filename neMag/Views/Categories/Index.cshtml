
@{
    ViewBag.Title = "Index";
}

<h1>@ViewBag.Message</h1>
<h2>Toate categoriile: </h2>
<br />

@foreach (var cat in ViewBag.Categories)
{
    <div class="panel panel-default">
        <div class="panel-heading">@cat.Title</div>
        <div class="panel-body">
            <p>@cat.Description</p>
            <a class="pull-left btn-sm btn btn-info" href="/Categories/Show/@cat.CategoryId">Afișează individual</a>
            <br />
            <br />
            <p>
                <a class="pull-left btn-sm btn btn-success" href="/Categories/Edit/@cat.CategoryId">Editează</a>
                <form method="post" action="/Categories/Delete/@cat.CategoryId">
                    @Html.HttpMethodOverride(HttpVerbs.Delete)
                    <button class="pull-right btn btn-danger" type="submit">Șterge</button>
                </form>
            </p>
            <div class="clearfix"></div>
        </div>
    </div>
}

<a class="pull-left btn-sm btn btn-success" href="/Categories/New">Adaugă o categorie nouă</a>
<br />

